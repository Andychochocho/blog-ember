{{#if updatePostForm}}
<h3>Update {{post.title}}</h3>

<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder= post.title}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder= post.author}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder= post.date}}
    </div>

    <div class="form-group">
      <label for="description">Title</label>
      {{input value=description id="description" placeholder= post.description}}
    </div>

    <button {{action 'update' post}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
